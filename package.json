{
  "name": "oe-library",
  "version": "0.0.1",
  "private": true,
  "description": "OE library repository.",
  "author": "EUROPEAN COMMISSION",
  "license": "EUPL",
  "repository": {
    "type": "git"
  },
  "scripts": {
    "build:assets": "npm-run-all --parallel css js",
    "build:clean": "rimraf build",
    "build:storybook": "build-storybook -c storybook/.storybook -o build",
    "build:copy": "ncp assets build",
    "css": "npm-run-all css-compile css-prefix css-minify",
    "css-compile": "sass --load-path=node_modules --style expanded --source-map --embed-sources --no-error-css src/scss/oe.scss:assets/css/oe.css",
    "css-prefix": "npm-run-all --parallel css-prefix-*",
    "css-prefix-main": "postcss --config postcss.config.js --replace \"assets/css/*.css\" \"!assets/css/*.min.css\"",
    "css-lint": "stylelint src/**/*.scss",
    "css-minify": "npm-run-all --parallel css-minify-*",
    "css-minify-main": "cleancss -O1 --format breakWith=lf --source-map --source-map-inline-sources --output assets/css/oe.min.css assets/css/oe.css",
    "jest": "jest",
    "js": "npm-run-all js-compile js-minify",
    "js-compile": "npm-run-all --parallel js-compile-*",
    "js-compile-standalone": "rollup --environment BUNDLE:false --config scripts/rollup.config.js --sourcemap",
    "js-compile-standalone-esm": "rollup --environment ESM:true,BUNDLE:false --config scripts/rollup.config.js --sourcemap",
    "js-compile-bundle": "rollup --environment BUNDLE:true --config scripts/rollup.config.js --sourcemap",
    "js-compile-plugins": "node scripts/build-plugins.js",
    "js-lint": "eslint --cache --cache-location .cache/.eslintcache --report-unused-disable-directives .",
    "js-minify": "npm-run-all --parallel js-minify-*",
    "js-minify-standalone": "terser --compress passes=2 --mangle --comments \"/^!/\" --source-map \"content=assets/js/oe.js.map,includeSources,url=oe.min.js.map\" --output assets/js/oe.min.js assets/js/oe.js",
    "js-minify-standalone-esm": "terser --compress passes=2 --mangle --comments \"/^!/\" --source-map \"content=assets/js/oe.esm.js.map,includeSources,url=oe.esm.min.js.map\" --output assets/js/oe.esm.min.js assets/js/oe.esm.js",
    "js-minify-bundle": "terser --compress passes=2 --mangle --comments \"/^!/\" --source-map \"content=assets/js/oe.bundle.js.map,includeSources,url=oe.bundle.min.js.map\" --output assets/js/oe.bundle.min.js assets/js/oe.bundle.js",
    "server": "browser-sync start --proxy localhost:5000 --files \"assets/css/oe.min.css\"",
    "storybook": "start-storybook -p 5000 -c storybook/.storybook -s assets/ --ci",
    "twig-snapshots": "npm run jest",
    "dist": "npm-run-all build:*",
    "start": "npm-run-all --parallel build:assets watch storybook server",
    "watch": "nodemon -e twig,scss -x \"npm run css\"",
    "test": "npm-run-all css-lint twig-snapshots"
  },
  "keywords": [
    "bootstrap",
    "sass",
    "css",
    "javascript",
    "template"
  ],
  "workspaces": [
    "storybook",
    "bootstrap",
    "src/components/*",
    "tools/*"
  ],
  "jest": {
    "verbose": true
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint"
    ],
    "*.scss": [
      "prettier --write",
      "stylelint"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.12.13",
    "@babel/core": "^7.12.13",
    "@babel/plugin-transform-runtime": "7.12.15",
    "@babel/preset-env": "^7.12.13",
    "babel-jest": "26.6.3",
    "clean-css-cli": "^4.3.0",
    "@popperjs/core": "^2.6.0",
    "@rollup/plugin-babel": "^5.2.3",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.1.1",
    "@rollup/plugin-replace": "^2.3.4",
    "autoprefixer": "^10.2.0",
    "browser-sync": "^2.26.14",
    "glob": "^7.1.6",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-prettier": "3.1.4",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "sass": "^1.32.8",
    "ncp": "2.0.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.5",
    "postcss-cli": "^8.3.1",
    "prettier": "2.2.1",
    "purgecss": "^3.1.3",
    "rimraf": "3.0.2",
    "rollup": "^2.38.5",
    "rollup-plugin-istanbul": "^3.0.0",
    "serve": "^11.3.2",
    "stylelint": "^13.9.0",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-twbs-bootstrap": "^2.1.0",
    "terser": "5.1.0"
  }
}
