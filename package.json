{
  "name": "oe-library",
  "version": "0.0.1",
  "private": true,
  "description": "OE library repository.",
  "author": "EUROPEAN COMMISSION",
  "license": "EUPL",
  "repository": {
    "type": "git"
  },
  "scripts": {
    "build:themes": "npm-run-all --parallel css js",
    "clean": "rimraf build assets",
    "copy:assets": "copyfiles -f src/themes/**/*min.* static/* assets/",
    "copy:build": "copyfiles assets/* static/* build",
    "copy:twig": "lerna --scope \"@oe/theme-*\" run twig",
    "css": "run-s css-compile css-prefix css-minify",
    "css-compile": "lerna --scope \"@oe/theme-*\" run css-compile",
    "css-prefix": "lerna --scope \"@oe/theme-*\" run css-prefix",
    "css-minify": "lerna --scope \"@oe/theme-*\" run css-minify",
    "css-lint": "stylelint src/**/*.scss",
    "dist": "run-s clean dist:*",
    "dist:themes": "run-s build:themes copy:*",
    "dist:storybook": "build-storybook -c storybook/.storybook -s assets -o build",
    "jest": "jest",
    "js": "run-s js-plugins js-compile js-minify",
    "js-compile": "lerna --scope \"@oe/theme-*\" run js-compile",
    "js-plugins": "node scripts/build-plugins.js",
    "js-minify": "lerna --scope \"@oe/theme-*\" run js-minify",
    "prepare": "husky install",
    "pretty:check": "prettier --check \"(src|storybook|tools)/**/*.{md,mdx,html,json,yml,js,jsx,scss}\"",
    "pretty:fix": "prettier --write \"(src|storybook|tools)/**/*.{md,mdx,html,json,yml,js,jsx,scss}\"",
    "postinstall": "patch-package",
    "start": "run-p watch storybook server",
    "server": "browser-sync start --proxy localhost:5000 --files \"assets/oe.min.css\"",
    "storybook": "start-storybook -p 5000 -c storybook/.storybook -s assets/ --ci",
    "test": "npm-run-all css-lint twig:snapshots",
    "twig:snapshots": "npm run jest",
    "watch": "nodemon -e twig,scss -x \"run-s build:themes copy:assets\""
  },
  "keywords": [
    "bootstrap",
    "sass",
    "css",
    "javascript",
    "template"
  ],
  "workspaces": [
    "storybook",
    "bootstrap",
    "src/data/*",
    "src/components/*",
    "tools/*",
    "src/themes/*"
  ],
  "jest": {
    "verbose": true
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint"
    ],
    "*.scss": [
      "prettier --write",
      "stylelint"
    ]
  },
  "devDependencies": {
    "@babel/cli": "7.13.16",
    "@babel/core": "7.14.2",
    "@babel/plugin-transform-runtime": "7.14.2",
    "@babel/preset-env": "7.14.2",
    "@babel/preset-react": "7.13.13",
    "@popperjs/core": "2.9.2",
    "autoprefixer": "10.2.5",
    "babel-jest": "26.6.3",
    "browser-sync": "2.26.14",
    "copyfiles": "2.4.1",
    "eslint": "7.26.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "glob": "7.1.7",
    "husky": "6.0.0",
    "jest": "26.6.3",
    "lerna": "4.0.0",
    "lerna-changelog": "1.0.1",
    "lint-staged": "11.0.0",
    "nodemon": "2.0.7",
    "npm-run-all": "4.1.5",
    "patch-package": "6.4.7",
    "postcss": "8.2.15",
    "postcss-cli": "8.3.1",
    "prettier": "2.3.0",
    "rimraf": "3.0.2",
    "serve": "11.3.2",
    "stylelint": "13.13.1",
    "stylelint-config-twbs-bootstrap": "2.2.0"
  },
  "resolutions": {
    "ssri": ">=6.0.2",
    "xmlhttprequest-ssl": ">=1.6.2",
    "hosted-git-info": ">=3.0.8"
  }
}
