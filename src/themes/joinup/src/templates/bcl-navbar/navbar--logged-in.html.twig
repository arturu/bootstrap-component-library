{% spaceless %}
<header class="ju-navbar ju-navbar--logged-in">
  <nav class="navbar navbar-expand">
    <div class="container">
      <a class="navbar-brand" href="/example.html">
        <img src="/src/themes/joinup/images/logo.svg" alt="JoinUp logo" />
      </a>
      <span class="navbar-claim">Interoperability solutions</span>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav accordion accordion-flush" id="accordion-1">
          <li class="nav-item accordion-item">
            <span class="accordion-header" id="heading-notifications">
