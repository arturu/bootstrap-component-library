{% spaceless %}

{# 
  Parameters:
  - label (string) (default: '')
  - variant (string) (default: 'primary')
  - size (string) (default: 'md')
    - options ["sm", "md", "lg"]
  - type (string) (default: 'button')
  - outline (boolean) (default: false)
  - disabled (boolean) (default: false)
  - text_nowrap (boolean) (default: false)
  - assistive_text (string) (default: '')
  - id (string) (default: '')
  - icon (icon object) (default: {}): predefined structure for Icon component
  - icon_position (string) (default: after)
    - options ["after", "before"]
  - clean_class (boolean) (default: false)
  - extra_classes (string) (default: '')
  - extra_attributes (object) (default: {})
  - spinner (spinner object) (default: {})
  - show_spinner (boolean) (default: false)
#}

{% set _label = label|default('') %}
{% set _variant = variant|default('primary') %}
{% set _size = size|default('md') %}
{% set _type = type|default('button') %}
{% set _outline = outline|default(false) %}
{% set _disabled = disabled|default(false) %}
{% set _text_nowrap = text_nowrap|default(false) %}
{% set _assistive_text = assistive_text|default('') %}
{% set _id = id|default('') %}
{% set _icon = icon|default({}) %}
{% set _icon_position = icon_position|default('after') %}
{% set _show_spinner = show_spinner|default(false) %}
{% set _spinner = spinner|default({}) %}
{% set _clean_class = clean_class|default(false) %}
{% set _extra_classes = extra_classes|default('') %}
{% set _class = [] %}
{% set attributes = attributes.removeAttribute('class') %}
{% set attributes = attributes.removeAttribute('aria-current') %}
{% set attributes = attributes.removeAttribute('aria-expanded') %}
{% set attributes = attributes.removeAttribute('autocomplete') %}
{% set attributes = attributes.removeAttribute('data-bs-toggle') %}
{% set attributes = attributes.removeAttribute('id') %}
{% set attributes = attributes.removeAttribute('disabled') %}
{% set attributes = attributes.removeAttribute('aria-disabled') %}
{% set attributes = attributes.removeAttribute('aria-controls') %}
{% set attributes = attributes.removeAttribute('data-bs-target') %}
{% if _clean_class == false %}
  {% set _class = _class|merge(['btn', 'btn-' ~ (_outline ? 'outline-' : '') ~ _variant]) %}
  {% set _class = _class|merge(['btn-' + _size]) %}
{% endif %}
{% if _text_nowrap %}
  {% set _class = _class|merge(['text-nowrap']) %}
{% endif %}
{% if _extra_classes is not empty %}
  {% set _class = _class|merge([_extra_classes]) %}
{% endif %}
{% if _id is not empty %}
  {% set attributes = attributes.setAttribute('id', _id) %}
{% endif %}
{% if _disabled %}
  {% set attributes = attributes.setAttribute('disabled', '').setAttribute('aria-disabled', 'true') %}
{% endif %}
{% if _class is not empty %}
  {% set attributes = attributes.addClass(_class) %}
{% endif %}
{% set attributes = attributes.setAttribute('type', _type) %}

{% if extra_attributes is defined and extra_attributes is not empty and extra_attributes is iterable %}
  {% for attr in extra_attributes %}
    {% if attr.value is defined %}
      {% set attributes = attributes.setAttribute(attr.name, attr.value) %}
    {% else %}
      {% set attributes = attributes.setAttribute(attr.name) %}
    {% endif %}
  {% endfor %}
{% endif %}

<button
  {{ attributes }}
>
{%- if _show_spinner -%}
  {% include '@oe-bcl/spinner/spinner.html.twig' with _spinner only %}
{%- endif -%}
{%- if _assistive_text is not empty -%}
  <span class="visually-hidden">{{- _assistive_text -}}</span>
{% endif %}
{%- if _icon_position == 'before' -%}
{% if _icon is not empty %}
  {% include '@oe-bcl/icon/icon.html.twig' with _icon only %}
{% endif %}
{%- endif -%}
  {{- label -}}
{%- if _icon_position == 'after' -%}
{%- if _icon is not empty -%}
  {% include '@oe-bcl/icon/icon.html.twig' with _icon only %}
{%- endif -%}
{%- endif -%}
</button>

{% endspaceless %}
